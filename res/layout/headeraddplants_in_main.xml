<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@drawable/action_bar1">
    
    <LinearLayout 
        android:id="@+id/headerLinearLayoutInPlants"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        
        <ImageView
            android:id="@+id/headerAddImageInPlants"            
            android:layout_height="match_parent"
            android:layout_width="30dp"
            android:src="@drawable/add_icon"
            android:layout_marginLeft="30dp"
            android:layout_gravity="left"
            android:clickable="false">
        </ImageView>
        
	    <TextView
	        android:id="@+id/headerTextInPlants"
	        
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:text="沈阳"
	        android:textColor="#ffffff"
	        android:layout_gravity="left"
	        android:textSize="20dp"
	        android:clickable="false"
	        ></TextView>
    
	</LinearLayout>
	
    
    	<TextView
	        android:id="@+id/centerHeaderTextInPlants"
	        
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:text="aaa"
	        android:textColor="#ffffff"
	        android:layout_centerHorizontal="true"
	        android:textSize="20dp"
	        android:clickable="false"
	        android:visibility="invisible"
	        ></TextView>
    <ImageView 
        android:id="@+id/headerRefreshImageInPlants"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/refresh_icon"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        ></ImageView>

</RelativeLayout>
